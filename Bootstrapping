from numpy import*
import random
import time
def bootstrap(dataset,b):  ## b is Number of bootstrap sample
     l=len(dataset)
     bs=[]
     bbs=[]
     for x in range(b):
          bs=sampl(dataset)
          bbs.append(bs)
     return bbs

def sampl(dataset):
     bstrap=[]
     l=len(dataset)
     for i in range(l):                       
          obs=random.choice(dataset)   ##selects samples randomly l times 
          bstrap.append(obs)
     return bstrap                          ##returns a bootstrap data
